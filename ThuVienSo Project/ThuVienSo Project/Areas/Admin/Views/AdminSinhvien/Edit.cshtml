@model ThuVienSo_Project.Models.Sinhvien

@{
    ViewData["Title"] = "Chỉnh sửa Sinh viên";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-controller="AdminSinhvien" asp-action="Edit" asp-route-id="@Model.Masinhvien" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Masinhvien" />
    <div class="page-header">
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Home" asp-controller="Admin" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <a class="breadcrumb-item" asp-area="Home" asp-controller="Admin" asp-action="AdminSinhvien">Danh sách Sinh viên</a>
                <span class="breadcrumb-item active">Chỉnh sửa Sinh viên</span>
            </nav>
        </div>
    </div>
    <div class="page-header no-gutters has-tab">
        <div class="d-md-flex m-b-15 align-items-center justify-content-between">
            <div class="media align-items-center m-b-15">
            </div>
            <div class="m-b-15">
                <button class="btn btn-primary">
                    <i class="anticon anticon-save"></i>
                    <span>Lưu</span>
                </button>
            </div>
        </div>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">THÔNG TIN SINH VIÊN</a>
            </li>
            <li class="nav-item">
        </ul>
    </div>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                <div class="form-group">
                        <div class="row">
                            <div class="form-group col-6">
                                <label class="font-weight-semibold" for="productPrice">Họ tên Sinh viên</label>
                                <input type="text" class="form-control" asp-for="Hoten">
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-6">
                                <label class="font-weight-semibold" for="productName">Giới tính</label>
                                <select class="custom-select" asp-for="Gioitinh" style="min-width: 200px;">
                                    <option value="" disabled selected>Chọn giới tính</option>
                                    <option value="Nam">Nam</option>
                                    <option value="Nữ">Nữ</option>
                                    <option value="Khác">Khác</option>
                                </select>

                            </div>
                            <div class="form-group col-6">
                                <label class="font-weight-semibold" for="productPrice">Lớp</label>
                                <input type="text" class="form-control" asp-for="Lop">
                            </div>
                        </div>

                        <label class="font-weight-semibold" for="productName">Khoa/Bộ môn</label>
                        <select class="custom-select" asp-for="Idkhoa" style="min-width: 200px;" asp-items="ViewBag.Idkhoa">
                            <option value="" disabled selected>Chọn Khoa/Bộ môn</option>
                        </select>
                </div>
            </div>
        </div>
    </div>
    </div>
</form>
