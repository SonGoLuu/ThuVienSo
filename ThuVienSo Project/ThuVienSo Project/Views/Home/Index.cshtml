    @section Scripts {
<script>
    $(document).ready(function ()
    {
        LoadTopRateDoc();
    });
    function LoadTopRateDoc(){
        $.ajax({
            url: '/Home/LoadTopRateDoc',
            method: 'get',
            success: function(result){
                if(result.status == "ok"){
                    var str = '';
                    $.each(result.sachs, function(index, value){
                        str+= '<div class="col-md-6">';
                     str+= '<div class="box">';
                         str+= '<div class="img-box">';
                             str+= '<img src="images/products/'+ value.anh + '"alt="" />';
                             str+= '<h4 class="blog_date">';
                                 str+= '<span>'+ value.tacgia + '</span>';
                             str+= '</h4>';
                         str+= '</div>';
                         str+= '<div class="detail-box" style="min-height:150px">';
                             str+= '<h5 >'+ value.tensach + '</h5>';
                             str+= '<a href="/Tailieu/Details/' + value.masach + '?idlayout=1"> Xem thêm </a>';
                         str+= '</div>';
                     str+= '</div>';
                 str+= '</div>';
                    });

                    $('#topRateDocList').html(str);
                }
            },
            error: function(err){
                console.log(err);
            }
        });
    }
</script>
